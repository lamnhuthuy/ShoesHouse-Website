@model RegisterRequest
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&family=Poppins:wght@400;500;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/css/login.css" />
</head>

<body>
    <div class="container sign-up-mode">
        <div class="forms-container">
            <div class="signin-signup">
                <form asp-action="Register" asp-controller="Login" method="post" class="sign-up-form">
                    <h2 class="title">Register</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input asp-for="UserName" required />
                        <span style="color:red;" asp-validation-for="UserName"></span>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input required asp-for="Email" />
                        <span asp-validation-for="Email" style="color:red;" class="error"></span>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-phone-alt"></i>
                        <input required type="text" asp-for="PhoneNumber" />
                        <span asp-validation-for="PhoneNumber" id="phoneSignUp-error" class="error"></span>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-map-marker-alt"></i>
                        <input asp-for="Address" id="signup-address" />
                    </div>
                    <div class=" input-field">
                        <i class="fas fa-lock"></i>
                        <input asp-for="Password" id="signup-password" />
                        <span asp-validation-for="Password" id="pwdSigUp-error" class="error"></span>
                    </div>
                    <div class=" input-field">
                        <i class="fas fa-key"></i>
                        <input asp-for="ConfirmPassword" id="signup-confirmpassword" />
                        <span asp-validation-for="ConfirmPassword" id="confpwdSigUp-error" class="error"></span>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="error"></div>
                    <input type="submit" id="btn-signup" class="btn" value="Register" />
                </form>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>Welcome to Geek's Bakery House</h3>
                    <p>
                        Do you already have an account?
                        If not, Please register your account here.
                    </p>
                    <button class="btn transparent" id="sign-up-btn">Register</button>
                </div>
                <img src="/image/log.svg" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>One of us ?</h3>
                    <p>
                        Welcome to Shoes's House website.
                        Let's start with us in here.
                    </p>
                    <a asp-action="Index" asp-controller="Login">
                        <button class="btn transparent" id="sign-in-btn">Login</button>
                    </a>
                </div>
                <img src="/image/register.svg" class="image" alt="" />
            </div>
        </div>
    </div>

</body>


</html>