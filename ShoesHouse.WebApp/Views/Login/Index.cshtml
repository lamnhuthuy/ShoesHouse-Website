@{
    Layout = null;
}
@model LoginRequest
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&family=Poppins:wght@400;500;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/css/login.css" />
</head>

<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                <form asp-action="Index" asp-controller="Login" method="post" class="sign-in-form" onsubmit=" return checkLoginSubmit()">
                    <h2 class="title">Sign in</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input asp-for="UserName" type="text" placeholder="Email" id="signin-text" />
                        <span asp-validation-for="UserName" style="margin-bottom:5px; color:red;"></span>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <i class="far fa-eye" id="hidePass"></i>
                        <input asp-for="Password" type="password" placeholder="Password" id="signin-password" />
                        <span asp-validation-for="Password" style="margin-bottom:5px; color:red;"></span>
                    </div>
                    <div asp-validation-summary="ModelOnly" style="color:red"></div>
                    <input type="submit" id="btn-login" value="Login" class="btn solid" />
                </form>
            </div>
        </div>
        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>Welcome to Shoes's House Store</h3>
                    <p>
                        Do you already have an account?
                        If not, Please register your account here.
                    </p>
                    <a asp-action="Register" asp-controller="Login">
                        <button class="btn transparent" id="sign-up-btn">Register</button>
                    </a>
                </div>
                <img src="/image/register.svg" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>One of us ?</h3>
                    <p>
                        Welcome to my Greek's Bakery website.
                        Let's start with us in here.
                    </p>
                    <button class="btn transparent" id="sign-in-btn">Login</button>
                </div>
                <img src="/image/register.svg" class="image" alt="" />
            </div>
        </div>
    </div>

</body>


</html>